{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "indent": ["warn", 4],
        "quotes": ["error","single"],
        "semi": ["error", "always"],
        "space-before-function-paren": ["warn", "never"],
        "jsx-quotes": ["warn", "prefer-single"],
        "linebreak-style": 0
    },
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
          "jsx": true
        }
    }
}
